.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 45%;
  left: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}
.modal-dialog .modal-title {
  padding-top: 30rpx;
  font-size: 15pt;
  color: #030303;
  text-align: center;
}
.modal-dialog .modal-content {
  margin-top: 20rpx;
  height: 300rpx;
}

.modal-dialog .modal-content .content{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  width: 80%;
  border-bottom: 2rpx solid #f2f2f2;
  margin-left: 10%;
}

.modal-dialog .modal-content .content .picker-title{
  width: 65%;
  font-size: 13pt;
  padding-top: 15rpx;
}

.modal-dialog .modal-content .content .picker-content{
  width: 35%;
  font-size: 13pt;
  padding-top: 15rpx;
  color: #888888;
}

.modal-dialog .modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.modal-dialog .modal-footer .btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.modal-dialog .modal-footer .btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}

.foot{
  width: 40%;
  margin-top: 30px;
}

